<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/join"
    android:id="@+id/authbg"
    tools:context=".AuthActivity">
    <TextView
        android:id="@+id/idtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="55dp"
        android:textSize="15dp"
        android:text="ID"
        android:visibility="gone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="20201234@duksung.ac.kr"
        android:paddingLeft="13dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:background="@drawable/border"
        android:id="@+id/authEmailEditView"
        android:inputType="textEmailAddress"
        android:visibility="gone"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/pwtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:textSize="15dp"
        android:text="Password"
        android:visibility="gone" />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Password"
        android:textSize="15dp"
        android:paddingLeft="13dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/border"
        android:id="@+id/authPasswordEditView"
        android:inputType="textPassword"
        android:visibility="gone"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입"
        android:background="@drawable/startbtn"
        android:src="@drawable/signup"
        android:id="@+id/signBtn"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:src="@drawable/login"
        android:background="@drawable/startbtn"
        android:id="@+id/loginBtn"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/goSignInBtn"
    android:src="@drawable/join2"
        android:layout_gravity="center"
    android:background="@drawable/joinbtn"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/authMainTextView"
        android:layout_marginTop="300dp"
        android:visibility="gone"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:id="@+id/logoutBtn"
        android:src="@drawable/logoutbig"
        android:background="@drawable/startbtn"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
</LinearLayout>